{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist/src",
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./test", "./src/deploy", "./hardhat.config.ts"]
}
